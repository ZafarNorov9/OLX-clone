<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#F3F4F6"
    android:layout_height="match_parent"
    tools:context=".ui.viewpager.SlidingFragment">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/image_sliding"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/success" />

        <TextView
            android:id="@+id/text_view_likes"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:ellipsize="end"
            android:fontFamily="@font/poppins_semibold"
            android:gravity="center"
            android:scrollHorizontally="true"
            android:singleLine="false"
            android:text="Qiziqarli e'lonlarni shu yerda saqlang"
            android:textColor="@color/black"
            android:textSize="20dp" />


        <TextView
            android:id="@+id/text_view_likes_description"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/poppins"
            android:gravity="center"
            android:text="Sizga yoqqan e'lonlarga like bosing va ular shu yerda ko'rinadi"
            android:textColor="#9AA4A5" />


    </LinearLayout>

</RelativeLayout>